<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="bootstrap.php" colors="true">
	<testsuites>
		<testsuite name="unit">
			<directory suffix="Test.php">Unit/</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="web/coverage" lowUpperBound="35"
			highLowerBound="70" />
	</logging>
	<filter>
		<whitelist>
			<directory suffix=".php">src</directory>
			<exclude>
				<directory suffix=".php">src/Test</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>
